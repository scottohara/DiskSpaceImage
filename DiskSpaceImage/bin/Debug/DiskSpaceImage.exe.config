<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Name of the image to render -->
    <add key="ImageName" value="C:\\DiskSpace.png"/>
    
    <!-- Image dimensions -->
    <add key="ImageHeight" value="100"/>
    <add key="ImageWidth" value="300"/>
    
    <!-- Image style -->
    <add key="FontName" value="Segoe Media Center"/>
    <add key="FontSize" value="12"/>
    <add key="FontColour" value="White"/>
    
    <!-- Image contents -->
    <add key="ShowVolumeLabel" value="false"/>
    
    <!-- Update Frequency (milliseconds) -->
    <add key="TimerInterval" value="10000"/>
  </appSettings>
</configuration>